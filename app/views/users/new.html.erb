<h1>新規登録</h1>
<%= form_for @user do |f| %>
    <p>
        <%= f.label :name,"お名前" %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :age, "ご年齢" %>
        <%= f.text_field :age %>
    </p>
    <p>
        <%= f.label :description,"ご挨拶" %>
        <%= f.text_field :description %>
    </p>

    <div class="check_box" >
        <%= f.collection_check_boxes(:skill_ids, Skill.all, :id, :skill_name) do |b| %>
            <%= b.label { b.check_box + b.text } %>

            <%# !--skill_levelの表示方法が不明 %>
            <%# form_for @user_skill do |d| %>
            <%# end %>

            <br>
        <% end %>
    </div>
    <p><%= link_to "タグの追加",new_skill_path %></p>
    <%= f.submit %>
<% end %>