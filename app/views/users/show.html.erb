<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<% if user_signed_in? && @user == current_user %>
    <h1>マイページ</h1>
    <p><span>名前： </span><%= @user.name %></p>
    <p><span>年齢：</span><%= @user.age %></p>
    <p><span>挨拶：</span><%= @user.description %></p>
    <% @user.skills.each do |skill| %>
    <p><%= skill[:skill_name] %></p>
    <!--<p><%= skill[:skill_level] %></p>-->
    <% end %>
    <%=link_to "プロフィール情報編集", edit_user_path(current_user) %>
    <%= link_to "ログイン情報編集", edit_user_registration_path(current_user) %>
    <%= link_to "削除", users_path, method: :delete, data: {confirm: "削除しますか?"} %>
<% else %>
    <h1>ユーザーページ</h1>
<% end %>

<h1><%= @user.username %></h1>

<% if user_signed_in? && @user == current_user %>
    <% link_to "プロフィール編集", edit_user_registration_path(current_user) %>
<% else %>
<% end %>