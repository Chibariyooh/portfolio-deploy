<%# <h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p> %>

<% if user_signed_in? && @user == current_user %>
    <%# <h1>マイページ</h1> %>
    <div class="mypage-user-personal">
        <h3>基本情報</h3>
        <p class="mypage-user-personal-data">
            <span>名前： </span><%= @user.name %><br>
            <span>年齢：</span><%= @user.age %><br>
            <span>挨拶：</span><%= @user.description %><br>
            <span>忙しさ： </span><%= @user.status %><br>
        </p>
        <p>
        <%= link_to "Twitterはこちら！",  "https://twitter.com/#{@user.twitter}" %>
        </p>
        <h3>所持スキル</h3>
        <% @user.skills.each do |skill| %>
        <p class="mypage-user-personal-skill-name"><%= skill[:skill_name] %></p>
        <% end %>
    </div>
    <div class="mypage-user-edit">
        <div class="mypage-user-edit-item"><%=link_to "プロフィール情報編集", edit_user_path(current_user) %></div>
        <div class="mypage-user-edit-item"><%= link_to "ログイン情報編集", edit_user_registration_path(current_user) %></div>
        <div class="mypage-user-edit-item"><%= link_to "登録データ削除", users_path, method: :delete, data: {confirm: "削除しますか?"} %></div>
    </div>
<% else %>
    <%# <h1>ユーザーページ</h1> %>
    <div class="mypage-user-personal">
        <h3>基本情報</h3>
        <p class="mypage-user-personal-data">
            <span>名前： </span><%= @user.name %><br>
            <span>年齢：</span><%= @user.age %><br>
            <span>挨拶：</span><%= @user.description %>
        </p>
        <h3>所持スキル</h3>
        <% @user.skills.each do |skill| %>
        <p class="mypage-user-personal-skill-name"><%= skill[:skill_name] %></p>
        <% end %>
    </div>
<% end %>

<h1><%= @user.username %></h1>

<% if user_signed_in? && @user == current_user %>
    <% link_to "プロフィール編集", edit_user_registration_path(current_user) %>
<% else %>
<% end %>