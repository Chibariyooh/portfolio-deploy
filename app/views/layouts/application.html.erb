<!DOCTYPE html>
<html>
  <head>
    <title>Testapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# link_to "新規登録", new_user_session_path %>
      <% if user_signed_in? %>
        <div><%= link_to 'マイページ', mypage_path %></div>
        <div><%= link_to 'ユーザー一覧', users_path %></div>
        <div><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></div>
        <%= yield %>
      <% else %>
        <div><%= link_to 'ログイン', new_user_session_path %></div>
        <div><%= link_to '新規登録', new_user_registration_path %></div>
      <%= yield %>
      <% end %>
  </body>
</html>
